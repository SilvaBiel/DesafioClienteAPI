@model IEnumerable<ClienteManagement.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ClienteName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClienteLastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClientePhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClienteEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClienteCep)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClienteCPF)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ClienteName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClienteLastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClientePhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClienteEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClienteCep)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClienteCPF)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ClienteId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ClienteId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ClienteId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
